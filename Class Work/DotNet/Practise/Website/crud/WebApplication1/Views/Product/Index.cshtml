@{
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
@model IEnumerable<WebApplication1.Models.Product>

<h2>Product List</h2>
<table class="table">
    <tr>
        <th>Product Id</th>
        <th>Product Name</th>
        <th>Rate</th>
        <th>Description</th>
        <th>Category Name</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td><a href="@Url.Action("Edit", new { id = item.ProductId })">@item.ProductId</a></td>
            <td>@item.ProductName</td>
            <td>@item.Rate</td>
            <td>@item.Description</td>
            <td>@item.CategoryName</td>
        </tr>
        <td>
            <a href="@Url.Action("Edit", "Product", new { id = item.ProductId })">Edit</a>
        </td>
        <td>
            <a href="@Url.Action("Delete", "Product", new { id = item.ProductId })"
               onclick="return confirm('Are you sure you want to delete this item?');">Delete</a>
        </td>

    }
</table>
